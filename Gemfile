  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'therubyracer', :platform => :ruby
  gem 'bootstrap-sass'
  gem 'uglifier', '>= 1.0.3'
end

group :test do
